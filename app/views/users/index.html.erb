<% provide(:title, 'All users') %>
<h1>All users</h1>

<!-- PAGINACION: Unicamente incluimos la lista dentro de will_paginate -->
<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %> <!-- Recorro todos los usuario -->
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to user.name, user %>

      <!-- Si el usuario es administrador, permito eliminar -->
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
  	  <% end %>

    </li>
  <% end %>

<%=	will_paginate %>

</ul>